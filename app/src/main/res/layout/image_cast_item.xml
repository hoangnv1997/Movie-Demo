<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.jvm.functions.Function1" />

        <import type="kotlin.Unit" />

        <import type="com.hoangnv97.moviedemo.domain.entity.ImageCast" />

        <variable
            name="imageCast"
            type="com.hoangnv97.moviedemo.domain.entity.ImageCast" />

        <variable
            name="goToImageCast"
            type="Function1&lt;ImageCast,Unit>" />
    </data>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="85dp"
        android:layout_height="105dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:onClick="@{_ -> goToImageCast.invoke(imageCast)}"
        app:bind_profile_path="@{imageCast.filePath}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars[0]" />
</layout>