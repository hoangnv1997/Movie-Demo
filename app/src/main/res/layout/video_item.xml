<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.jvm.functions.Function1" />

        <import type="kotlin.Unit" />

        <import type="com.hoangnv97.moviedemo.domain.entity.Video" />

        <variable
            name="video"
            type="com.hoangnv97.moviedemo.domain.entity.Video" />

        <variable
            name="goToWatchVideo"
            type="Function1&lt;Video,Unit>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="162dp"
            android:layout_height="108dp"
            app:bind_video_thumbnail="@{video.key}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic[1]" />

        <ImageButton
            android:id="@+id/playImageButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@null"
            android:onClick="@{_ -> goToWatchVideo.invoke(video)}"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_play_circle_outline_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>